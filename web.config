<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Regla para servir archivos estÃ¡ticos de frontend -->
        <rule name="Frontend Static Files" stopProcessing="true">
          <match url="^frontend/(assets|.*\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))(.*)$" />
          <action type="Rewrite" url="{R:0}" />
        </rule>
        
        <!-- Regla para React Router: todas las rutas /frontend/* sirven index.html -->
        <rule name="Frontend SPA" stopProcessing="true">
          <match url="^frontend/(.*)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="frontend/index.html" />
        </rule>
        
        <!-- Reglas de Laravel -->
        <rule name="Laravel" stopProcessing="true">
          <match url="^" ignoreCase="false" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="public/index.php" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
